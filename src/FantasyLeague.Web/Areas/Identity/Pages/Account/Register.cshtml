@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <h5 class="bundesliga-color">Account</h5>
            <hr class="mt-0" />
            <div class="row">
                <div class="col form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <h5 class="bundesliga-color">Club</h5>
            <hr class="mt-0" />
            <div class="row">
                <div class="col form-group">
                    <label asp-for="Input.ClubName"></label>
                    <input asp-for="Input.ClubName" class="form-control" />
                    <span asp-validation-for="Input.ClubName" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Input.FavouriteTeamId"></label>
                    <select class="form-control" asp-for="Input.FavouriteTeamId">
                        <option value="@(Guid.Empty)" disabled selected>Select team</option>
                        @foreach (var t in Model.BundesligaTeams)
                        {
                            <option value="@(t.Id)">@(t.Name)</option>
                        }
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
