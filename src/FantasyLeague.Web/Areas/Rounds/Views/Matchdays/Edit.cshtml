@{
    @model MatchdayEditViewModel
    ViewData["Title"] = $"{ActionConstants.Edit} {GlobalConstants.MatchdayName} {Model.Week}";
    ViewData["ActivePage"] = PagesConstants.Matchdays;
}

<h1>Matchday @Model.Week</h1>
<h4>
    @Model.StartDate.ToString(GlobalConstants.Date, CultureInfo.CreateSpecificCulture(GlobalConstants.DateTimeFormat)) ÷ @Model.EndDate.ToString(GlobalConstants.Date, CultureInfo.CreateSpecificCulture(GlobalConstants.DateTimeFormat))
</h4>
<div class="button-holder d-flex justify-content-start">
    <div>
        @{
            <a asp-controller="@PagesConstants.Matchdays" asp-action="@ActionConstants.Details" asp-route-id="@Model.Id" asp-a class="btn btn-outline-primary"><span class="oi oi-share-boxed"></span></a>
        }

    </div>
</div>
<hr>

<div class="bg-danger text-white rounded p-3">
    <h5 class="p-0">
        <span class="text-uppercase">Warning:</span>
        Editing of fixtures will result in loss of ALL player scores!
    </h5>
</div>

<div class="d-flex justify-content-center">
    <div class="w-95 text-center">
        <partial name="~/Areas/Rounds/Views/Shared/_MatchdayEditPartial.cshtml" model="Model" />
    </div>
</div>

